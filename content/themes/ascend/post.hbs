{{!< default}}
{{! Top line inserts this template on main layout}}

{{! Post template }}
{{#post}}
<main id="main-asnd">
	<article id="post-page-asnd" class="{{post_class}}">
		
		<header class="post-header">
			<span class="post-meta-info">
				<time>{{date format="MMMM DD, YYYY"}}</time>
				<div class="tags-block">
					{{tags separator=" â€¢ "}}
				</div>
			</span>

			{{#if image}}
			<img src="{{image}}" alt="{{title}}">
			{{/if}}
			
			<h1>{{title}}</h1>
		</header>

		<section id="post-content-asnd">
			{{content}}
		</section>

		<footer id="author-share-asnd">
			<section class="author-section">
				{{#author}}
				{{#if image}}
				<img class="author-pic" src="{{image}}" alt="{{name}}">
				{{/if}}

				<h4 class="author-name"><a href="{{url}}">{{name}}</a></h4>

				{{#if bio}}
				<p class="author-bio">{{bio}}</p>
				{{/if}}

				{{#if website}}
				<a class="author-website" href="{{website}}">{{website}}</a>
				{{/if}}
				{{/author}}
			</section>

			<section class="jump-to-posts">
				<h4>More to read</h4>
				{{#next_post}}
				<div>
					<span class="next-post-label">NEXT POST <i class="fa fa-angle-right"></i></span>
					<a href="{{url}}">{{title}}</a>
					<p>
						{{excerpt words="32"}}...
					</p>
				</div>
				{{/next_post}}

				{{#prev_post}}
				<div>
					<span class="prev-post-label"><i class="fa fa-angle-left"></i> PAST POST</span>
					<a href="{{url}}">{{title}}</a>
					<p>
						{{excerpt words="32"}}...
					</p>
				</div>
				{{/prev_post}}
			</section>

			<section id="dynacomments" data-backuseid="{{id}}"></section>

		</footer>
	</article>
<div id="disqus_thread"></div>
<script type="text/javascript">
    var disqus_shortname = 'knightime'; // required: replace example with your forum shortname
    var disqus_identifier = '{{post.id}}';
 
    /* * * DON'T EDIT BELOW THIS LINE * * */
